<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="columns.top">
            <container name="product.view.bannertop" before="-">
                <block class="Dev\Banner1\Block\Banner\BannerWidget" name="banner1.widget"
                       template="Dev_Banner1::widget.phtml"/>
                <!--                <block class="Dev\Banner1\Block\Banner\BannerWidgetBot" name="banner1.widgetbot" template="Dev_Banner1::widgetbot.phtml"/>-->
            </container>
        </referenceContainer>
        <referenceContainer name="footer">
            <container name="product.view.bannerbottom" before="-">
                <block class="Dev\Banner1\Block\Banner\BannerWidgetBot" name="banner1.widgetbot"
                       template="Dev_Banner1::widgetbot.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
